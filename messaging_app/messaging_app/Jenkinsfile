pipeline {
    agent any

    environment {
        GITHUB_CREDENTIALS = credentials('github-credentials')
        DOCKERHUB_CREDENTIALS = credentials('dockerhub-credentials')
    }

    stages {
        stage('Checkout') {
            steps {
                git(
                    url: 'https://github.com/peterayad-eng/alx-backend-python.git',
                    credentialsId: 'github-credentials',
                    branch: 'main',
                    changelog: true,
                    poll: true
                )
            }
        }

        stage('Setup Python') {
            steps {
                sh '''
                python3 -m venv venv
                . venv/bin/activate
                pip install --upgrade pip
                pip install -r messaging_app/requirements.txt
                '''
            }
        }

        stage('Run Tests') {
            steps {
                sh '''
                . venv/bin/activate
                cd messaging_app
                python -m pytest --junitxml=test-results.xml --cov=. --cov-report=xml:coverage.xml --cov-report=html
                '''
            }
            post {
                always {
                    junit 'messaging_app/test-results.xml'
                    publishHTML([
                        allowMissing: true,
                        alwaysLinkToLastBuild: false,
                        keepAll: false,
                        reportDir: 'messaging_app/htmlcov',
                        reportFiles: 'index.html',
                        reportName: 'Coverage Report',
                        reportTitles: ''
                    ])
                }
            }
        }
    }

    post {
        always {
            cleanWs()
        }
    }
}
